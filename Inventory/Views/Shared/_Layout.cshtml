<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initital-scale=1.0" />

    <title>@ViewData["Title"] - Inventory</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Inventory</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <section>
        @RenderBody()
    </section>
    <footer class="d-flex text-center justify-content-center fixed-bottom bg-dark text-white">
        <p>&copy; 2021 - Inventory</p>
    </footer>

</body>
</html>