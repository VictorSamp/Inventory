<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/lib/bootstrap-5.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body class="container-fluid">
    <div class="container-fluid">
        <header class="fixed-top">
            <nav class="navbar navbar-expand-lg bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home">Inventory</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a>
                            <a class="nav-link" asp-controller="Manufacturers" asp-action="Index">Manufacturers</a>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <section>
            @RenderBody()
        </section>
        <footer class="fixed-bottom bg-dark text-white">
            <p>&copy; 2021 - Inventory</p>
        </footer>
    </div>

    <script src="~/lib/jquery-3.6.0/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-5.0.0/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
