@model IEnumerable<Inventory.Models.Manufacturer>

@{
    ViewData["Title"] = "Manufacturers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a class="btn btn-primary text-white" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ManufacturerId">Edit</a> |
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.ManufacturerId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ManufacturerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
